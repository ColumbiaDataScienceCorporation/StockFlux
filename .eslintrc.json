{
  "env": {
    "browser": true,
    "commonjs": false,
    "es6": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "react-app",
    "prettier"
  ],
  "globals": {},
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "prettier/prettier": "error",
    "prettier": "true",
    "semi": [
      "error",
      "always"
    ],
    "no-trailing-spaces": "error",
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": true
      }
    ]
  }
}
